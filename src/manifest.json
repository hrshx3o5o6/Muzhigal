{
    "manifest_version": 3,
    "name": "Music Link Converter",
    "version": "1.0",
    "description": "Convert music links between Spotify and YouTube Music",
    "permissions": [
        "storage",
        "activeTab",
        "identity",
        "clipboardWrite"
    ],
    "host_permissions": [
        "https://accounts.spotify.com/*",
        "https://api.spotify.com/*",
        "https://www.googleapis.com/*",
        "https://accounts.google.com/*",
        "https://oauth2.googleapis.com/*",
        "https://music.youtube.com/*",
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}