{
    "manifest_version": 3,
    "name": "Musically: Send Music That Works â€“ Anywhere, Any Platform, Any Time.",
    "version": "1.0",
    "description": "Convert music links between Spotify and YouTube Music",
    "permissions": [
        "storage",
        "identity",
        "clipboardWrite",
        "activeTab"
    ],
    "host_permissions": [
        "https://accounts.spotify.com/*",
        "https://api.spotify.com/*",
        "https://accounts.google.com/*",
        "https://www.googleapis.com/*",
        "https://music.youtube.com/*",
        "https://open.spotify.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "oauth2": {
        "client_id": "67dab6c61a8740fab3d446243cd3b8b5",
        "scopes": [
            "playlist-read-private",
            "user-library-read"
        ]
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}