{
    "manifest_version": 3,
    "name": "Music Link Converter",
    "version": "1.0",
    "description": "Convert music links between Spotify and YouTube Music",
    "permissions": [
        "storage",
        "identity",
        "clipboardWrite"
    ],
    "host_permissions": [
        "https://accounts.spotify.com/*",
        "https://api.spotify.com/*",
        "https://www.googleapis.com/youtube/v3/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "key": "MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEA3QU5",
    "oauth2": {
        "client_id": "67dab6c61a8740fab3d446243cd3b8b5",
        "scopes": [
            "playlist-read-private",
            "user-library-read"
        ]
    }
}